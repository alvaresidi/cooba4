<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.project_penir.Gameplay">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNamagame"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="0"
        android:layout_height="wrap_content"
        android:id="@+id/textKesempatan"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:layout_width="20dp" />

    <TextView
        android:text="Kesempatan : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textKesempatan" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textScoreResult"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/textview" />

    <TextView
        android:text="Ronde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="1/20"
        android:layout_height="wrap_content"
        android:id="@+id/textRonde"
        android:textSize="18sp"
        android:layout_width="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5" />

    <TextView
        android:text="Score :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textLevelGame"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/textScoreResult"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageSoal"
        android:layout_width="550dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textLevelGame"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <Button
        android:text="X"
        android:layout_height="wrap_content"
        android:id="@+id/bt11"
        android:layout_alignBaseline="@+id/bt10"
        android:layout_alignBottom="@+id/bt10"
        android:layout_toEndOf="@+id/bt4"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp" />

    <Button
        android:id="@+id/btj1"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_alignParentStart="true"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj2"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj1"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj3"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj2"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj4"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj3"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj5"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj4"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj6"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj5"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj7"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj6"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj8"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj7"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj9"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj8"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/btj10"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/imageSoal"
        android:layout_toEndOf="@+id/btj9"
        android:layout_width="33dp"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btj1"
        android:onClick="exit"
        android:text="Exit"
        android:textAllCaps="false" />

    <Button
        android:text="Y"
        android:layout_height="wrap_content"
        android:id="@+id/bt12"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/bt11"
        android:layout_alignBottom="@+id/bt11"
        android:layout_toEndOf="@+id/bt11"
        android:layout_width="45dp" />

    <Button
        android:text="Z"
        android:layout_height="wrap_content"
        android:id="@+id/bt1"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_below="@+id/bt7"
        android:layout_alignStart="@+id/bt7"
        android:layout_width="45dp" />

    <Button
        android:text="L"
        android:layout_height="wrap_content"
        android:id="@+id/bt2"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_below="@+id/bt8"
        android:layout_toEndOf="@+id/bt1" />

    <Button
        android:text="O"
        android:layout_height="wrap_content"
        android:id="@+id/bt3"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_alignBaseline="@+id/bt2"
        android:layout_alignBottom="@+id/bt2"
        android:layout_toEndOf="@+id/bt8" />

    <Button
        android:text="V"
        android:layout_height="wrap_content"
        android:id="@+id/bt4"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_below="@+id/bt10"
        android:layout_toEndOf="@+id/bt3" />

    <Button
        android:text="X"
        android:layout_height="wrap_content"
        android:id="@+id/bt6"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_below="@+id/bt11"
        android:layout_toEndOf="@+id/bt11" />

    <Button
        android:text="E"
        android:layout_height="wrap_content"
        android:id="@+id/bt5"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_alignBaseline="@+id/bt4"
        android:layout_alignBottom="@+id/bt4"
        android:layout_toEndOf="@+id/bt10" />

    <Button
        android:text="L"
        android:layout_height="wrap_content"
        android:id="@+id/bt7"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_below="@+id/btnExit"
        android:layout_toEndOf="@+id/btj1" />

    <Button
        android:text="I"
        android:layout_height="wrap_content"
        android:id="@+id/bt8"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_alignBaseline="@+id/bt7"
        android:layout_alignBottom="@+id/bt7"
        android:layout_toEndOf="@+id/bt1" />

    <Button
        android:text="V"
        android:layout_height="wrap_content"
        android:id="@+id/bt9"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_alignBaseline="@+id/bt8"
        android:layout_alignBottom="@+id/bt8"
        android:layout_toEndOf="@+id/bt2" />

    <Button
        android:text="E"
        android:layout_height="wrap_content"
        android:id="@+id/bt10"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="45dp"
        android:layout_alignBaseline="@+id/bt9"
        android:layout_alignBottom="@+id/bt9"
        android:layout_toEndOf="@+id/bt3" />

</RelativeLayout>
